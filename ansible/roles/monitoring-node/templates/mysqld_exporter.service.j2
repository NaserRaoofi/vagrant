[Unit]
Description=MySQL Exporter
After=network.target mysql.service

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/usr/local/bin/mysqld_exporter \
    --config.my-cnf=/etc/mysqld_exporter.cnf \
    --web.listen-address=0.0.0.0:9104
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
