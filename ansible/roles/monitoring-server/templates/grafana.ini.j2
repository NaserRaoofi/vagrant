[server]
protocol = http
http_addr = 0.0.0.0
http_port = 3000
domain = {{ ansible_hostname }}
root_url = http://{{ ansible_default_ipv4.address }}:3000/

[security]
admin_user = {{ grafana_admin_user }}
admin_password = {{ grafana_admin_password }}
secret_key = {{ ansible_hostname }}_secret_key

[auth.anonymous]
enabled = true
org_role = Viewer

[dashboards]
default_home_dashboard_path = /var/lib/grafana/dashboards/infrastructure.json

[datasources]
# This will be configured via API after startup

[log]
mode = console file
level = info

[paths]
data = /var/lib/grafana
logs = /var/log/grafana
plugins = /var/lib/grafana/plugins
provisioning = /etc/grafana/provisioning
