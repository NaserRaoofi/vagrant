global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    environment: 'vagrant-lab'

# Rule files for alerting
# These are loaded if prometheus_alerting_enabled is true in group_vars/monitoring.yml
{% if prometheus_alerting_enabled | default(false) %}
rule_files:
  - "{{ prometheus_rules_path }}/alert.rules.yml"
  # - "another.rules.yml" # Add more rule files here if needed
{% endif %}

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
    scrape_interval: 30s

  - job_name: 'node-exporter'
    static_configs:
      - targets:
{% for target in prometheus_targets.node_exporter %}
          - '{{ target }}'
{% endfor %}
    scrape_interval: 15s
    metrics_path: /metrics

  - job_name: 'mysql-exporter'
    static_configs:
      - targets:
{% for target in prometheus_targets.mysql_exporter %}
          - '{{ target }}'
{% endfor %}
    scrape_interval: 30s

  # Web servers health check
  - job_name: 'web-servers-health'
    static_configs:
      - targets:
          - '192.168.56.11:80'
          - '192.168.56.12:80'
    metrics_path: /health
    scrape_interval: 30s

  # Load balancer
  - job_name: 'load-balancer'
    static_configs:
      - targets:
          - '192.168.56.10:80'
    metrics_path: /nginx-status
    scrape_interval: 30s

# Storage configuration
storage:
  tsdb:
    path: {{ prometheus_storage_path }}
    retention.time: {{ prometheus_retention }}
